doctype html
html(lang="fr")
    head
        meta(charset="UTF-8")
        title My Layout

        link(rel="stylesheet" href="/bootstrap")

    body
        
        header: nav: ul
            li: a(href="/") Home
            li: a(href="/users") users

        div(class='container')
            div(class='row')
                div(class='col-sm-8')

                div(class='col-sm-4')
                    ul
                        each student in students
                            li= student.name + " " + student.age

